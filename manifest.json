{
  "name": "Tahir",
  "description": "Avoid haram images & videos on the Internet.",
  "version": "1.0.3",
  "permissions": [
  	"storage"
  ],
  "browser_action": {
      "default_title": "Tahir",
      "default_popup": "popup.html"
  },
  "icons": {
    "48": "assets/img/icon48.png",
    "96": "assets/img/icon96.png",
    "128": "assets/img/icon128.png"
  },
  "commands": {
    "reverse_status": {
        "suggested_key": {
            "default": "Alt+L"
        },
        "description": "Reverse blur state"
    },
    "unblur_selected": {
        "suggested_key": {
            "default": "Alt+K"
        },
        "description": "Unblur selected image"
    }
},
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tab.js"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "tahir@browser.extension"
    }
  }
}
